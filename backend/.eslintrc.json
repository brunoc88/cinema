{
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "semi": ["error", "never"],
    "space-before-function-paren": ["error", "always"],
    "func-names": ["error", "never"],
    "no-console": "off",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "comma-dangle": "off",
    "no-magic-numbers": "off",
    "consistent-return": "off",
    "no-use-before-define": "off",
    "no-unexpected-multiline": "off"
  }
}
